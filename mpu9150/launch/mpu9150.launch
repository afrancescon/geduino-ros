<launch>

  <!-- The MPU9150 imu node -->
  <node pkg="mpu9150" type="imu_node" name="imu" ns="mpu9150" output="screen" respawn="true">
    <rosparam file="$(find mpu9150)/config/imu_params.yaml" command="load" />
  </node>

  <!-- The MPU9150 diagnostic node -->
  <node pkg="mpu9150" type="mpu9150_diagnostic_node" name="diagnostic" ns="mpu9150" output="screen" respawn="true">
  </node>

</launch>
